<!-- app/views/machines/_form.html.erb -->

<%= form_with(model: @machine, local: true, class: 'mt-3') do |form| %>
  <% if @machine.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@machine.errors.count, 'error') %> prohibited this machine from being saved:</h2>

      <ul>
        <% @machine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :downtime, class: 'form-label' %>
    <%= form.number_field :downtime, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :uptime, class: 'form-label' %>
    <%= form.number_field :uptime, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
